<document>
  <properties>
    <title>History Ingrid OpenSearch Server</title>
    <author email="andre.wallat@wemove.com">André Wallat</author>
  </properties>
  <body>
  
    <release version="4.0.1" date="2016-02-01" description="Release 4.0.1">
      <action type="fix" dev="wemove" issue="REDMINE-465">
        Fixed wrong path to save data when using cygwin.
      </action>
    </release>
    
    <release version="3.6.2" date="2016-05-25" description="Release 3.6.2">
      <action type="update" dev="wemove">
        Use most current dependencies (communication, iplug jars).
      </action>
    </release>
    
    
    <release version="3.6.1" date="2015-11-18" description="Release 3.6.1">
      <action type="update" dev="wemove" issue="REDMINE-15">
        Remove all references to PortalU.
      </action>
      <action type="update" dev="wemove" issue="REDMINE-106">
        Use encrypted password for web interface.
      </action>
    </release>
    
    <release version="3.6.0" date="2015-06-19" description="Release 3.6.0">
      <action type="fix" dev="wemove">
        Fixed incompatibilities with Java 8
      </action>
    </release>
    
    <release version="3.5.0" date="2015-02-02" description="Release InGrid 3.5.0">
      <action type="add" dev="wemove" issue="REDMINE-524">
        Added license header to all source files for Open Source migration.
      </action>
    </release>

    <release version="3.4.0" date="2014-02-25" description="Release InGrid 3.4.0">
      <action type="update" dev="wemove">
        Added updated strategy for easier installation.
      </action>
      <action type="fix" dev="wemove">
        Fixed removal of old lib directory during update.
      </action>
    </release>

    <release version="3.3.0" date="2013-03-05" description="Release InGrid 3.3">
      <action type="update" dev="wemove">
        Use most current dependencies (jars)!
      </action>
    </release>

    <release version="3.2.1" date="2012-09-26" description="Release InGrid 3.2.1">
      <action type="update" dev="wemove">
        Use latest opensearch-interface with bug fixes.
      </action>
    </release>

    <release version="3.2.0" date="2012-07-13" description="Release InGrid 3.2">
      <action type="update" dev="wemove" issue="INGRID-1885">
        Updated start.sh, which had an issue when being batch-invoked, deleted RSYNC which is no longer used, see https://dev.wemove.com/jira/browse/INGRID-1885
      </action>
      <action type="fix" dev="wemove">
        Start page was not redirecting to button links for some browsers under windows.
      </action>
      <action type="fix" dev="wemove">
        Fix index file locking problem when re-indexing under windows.
      </action>
      <action type="update" dev="wemove">
        Use latest opensearch-interface to handle new request parameter and other functionality.
      </action>
    </release>
    <release version="3.1.0" date="2011-09-15" description="Release InGrid 3.1">
      <action type="fix" issue="INGRID-1992">
        Changed logging behavior, so that not so many files will be created.
      </action>
    </release>
    <release version="3.0.0" date="2011-05-06" description="Release InGrid3.0">
      <action type="update">
        Use most current dependencies (jars, except interface-opensearch and dsc), NO FUNCTIONAL CHANGES !
      </action>
    </release>

    <release version="2.3.1" date="2011-01-24" description="Update dependencies Release">
      <action type="update" dev="wemove">
        Removed udk_presets for mapping, should not be part of opensearch server (can be copied from DSC iPlug).
      </action>
      <action type="update">
		Use most current dependencies (jars)!
      </action>
    </release>

    <release version="1.0.0" date="2010-07-27" description="Initial Release">
      <action type="add" dev="wemove" issue="INGRID21-15">
        Implementierung eines generischen OpenSearch Servers.
      </action>
    </release>
  </body>
</document>